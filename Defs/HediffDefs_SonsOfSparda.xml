<Defs>

  <!-- Spectral Regeneration - Base demonic healing -->
  <HediffD          <!-- Needs - Vergil doesn't care about recreation -->
          <RestFallRateFactor>0.2</RestFallRateFactor>
          <HungerRateMultiplier>1.6</HungerRateMultiplier>
          <RecreationFallRateFactor>0.05</RecreationFallRateFactor>
    <defName>DMC_SpectralRegeneration</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>spectral regeneration</label>
    <description>Demonic heritage allows rapid healing of wounds and resistance to diseases and toxins. The body constantly repairs itself and adapts to threats.</description>
    <defaultLabelColor>(0.6, 1.0, 0.6)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <chronic>true</chronic>
    <stages>
      <li>
        <statOffsets>
          <!-- Environmental Resistances -->
          <ToxicEnvironmentResistance>0.80</ToxicEnvironmentResistance>
          <ToxicResistance>0.75</ToxicResistance>
          <ComfyTemperatureMin>-25</ComfyTemperatureMin>
          <ComfyTemperatureMax>25</ComfyTemperatureMax>
          <VacuumResistance>0.90</VacuumResistance>
          
          <!-- Disease Resistance -->
          <PainShockThreshold>0.40</PainShockThreshold>
          <MentalBreakThreshold>-0.15</MentalBreakThreshold>
        </statOffsets>
        <statFactors>
          <!-- Healing and Recovery -->
          <InjuryHealingFactor>4.0</InjuryHealingFactor>
          <ImmunityGainSpeed>3.5</ImmunityGainSpeed>
          
          <!-- Survival Factors -->
          <FoodPoisonChance>0.1</FoodPoisonChance>
          <MalnutritionSeverityOffset>-0.5</MalnutritionSeverityOffset>
        </statFactors>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Regeneration">
        <severityPerDayHealed>2.5</severityPerDayHealed>
      </li>
    </comps>
  </HediffDef>

