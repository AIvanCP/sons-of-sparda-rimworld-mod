<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Dante - Ate Lavish Food -->
  <ThoughtDef>
    <defName>DMC_DanteLavishFood</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>4</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>DMC_DarkSlayer</li>
      <li>DMC_SpardaBloodline</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_SonOfSparda</li>
    </requiredTraits>
    <stages>
      <li>
        <label>enjoyed amazing food</label>
        <description>Now THAT'S what I call a meal! Pizza, steaks, desserts - living the good life!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Dante - Ate Simple Food -->
  <ThoughtDef>
    <defName>DMC_DanteSimpleFood</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>DMC_DarkSlayer</li>
      <li>DMC_SpardaBloodline</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_SonOfSparda</li>
    </requiredTraits>
    <stages>
      <li>
        <label>decent meal</label>
        <description>Not bad, but I could go for some pizza right about now.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Dante - No Recreation -->
  <ThoughtDef>
    <defName>DMC_DanteNoFun</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>5</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>DMC_DarkSlayer</li>
      <li>DMC_SpardaBloodline</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_SonOfSparda</li>
    </requiredTraits>
    <stages>
      <li>
        <label>all work, no play</label>
        <description>Life's too short to be this boring. Where's the style? Where's the fun?</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Vergil - Poor Quality Weapon -->
  <ThoughtDef>
    <defName>DMC_VergilBadWeapon</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>DMC_SonOfSparda</li>
      <li>DMC_SpardaBloodline</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_DarkSlayer</li>
    </requiredTraits>
    <stages>
      <li>
        <label>unworthy weapon</label>
        <description>This pathetic blade is beneath my abilities. I require perfection in all things.</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Vergil - Not Strongest -->
  <ThoughtDef>
    <defName>DMC_VergilNotStrongest</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>DMC_SonOfSparda</li>
      <li>DMC_SpardaBloodline</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_DarkSlayer</li>
    </requiredTraits>
    <stages>
      <li>
        <label>insufficent power</label>
        <description>There are others stronger than me here. This is unacceptable. I must gain more power.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Nero - Lost Duel -->
  <ThoughtDef>
    <defName>DMC_NeroLostDuel</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>3</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>DMC_SonOfSparda</li>
      <li>DMC_DarkSlayer</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_SpardaBloodline</li>
    </requiredTraits>
    <stages>
      <li>
        <label>failed to protect</label>
        <description>I wasn't strong enough when it mattered. I have to do better.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Nero - Ally Died -->
  <ThoughtDef>
    <defName>DMC_NeroAllyDied</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>7</durationDays>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>DMC_SonOfSparda</li>
      <li>DMC_DarkSlayer</li>
    </nullifyingTraits>
    <requiredTraits>
      <li>DMC_SpardaBloodline</li>
    </requiredTraits>
    <stages>
      <li>
        <label>couldn't save them</label>
        <description>Someone I was supposed to protect died. This is my fault.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Entity Kill Bonus -->
  <ThoughtDef>
    <defName>DMC_EntityKill</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>5</stackLimit>
    <requiredTraits>
      <li>DMC_SonOfSparda</li>
      <li>DMC_DarkSlayer</li>
      <li>DMC_SpardaBloodline</li>
    </requiredTraits>
    <stages>
      <li>
        <label>slayed demonic entity</label>
        <description>Another threat eliminated. This is what I was born to do.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>