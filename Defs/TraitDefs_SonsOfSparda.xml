<Defs>

  <!-- Son of Sparda Trait (Dante) -->
  <TraitDef>
    <defName>DMC_SonOfSparda</defName>
    <commonality>0</commonality>
    <label>son of sparda</label>
    <description>The legendary bloodline of the Dark Knight Sparda. Combat comes naturally, but mundane work feels beneath one's station. Loves style, pizza, and having a good time, but becomes moody without proper recreation.</description>
    <degreeDatas>
      <li>
        <label>son of sparda</label>
        <description>The legendary blood of Sparda grants incredible combat prowess and resilience, but makes mundane work feel trivial. Craves excitement and good food.</description>
        <degree>0</degree>
        <skillGains>
          <Melee>6</Melee>
          <Shooting>4</Shooting>
        </skillGains>
        <workDisables>
          <li>Research</li>
          <li>Art</li>
        </workDisables>
        <statOffsets>
          <SocialImpact>-3</SocialImpact>
          <Beauty>5</Beauty>
          <CarryingCapacity>15</CarryingCapacity>
          <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
          <ArmorRating_Heat>0.15</ArmorRating_Heat>
          <ArmorRating_Electric>0.12</ArmorRating_Electric>
        </statOffsets>
        <statFactors>
          <WorkSpeedGlobal>0.85</WorkSpeedGlobal>
          <MoveSpeed>1.2</MoveSpeed>
        </statFactors>
        <hediffGivers>
          <li Class="HediffGiver_Birthday">
            <hediff>DMC_SpectralRegeneration</hediff>
            <ageDays>0</ageDays>
          </li>
          <li Class="HediffGiver_Birthday">
            <hediff>DMC_SonOfSpardaPower</hediff>
            <ageDays>0</ageDays>
          </li>
          <li Class="HediffGiver_Birthday">
            <hediff>DMC_EntitySlayer</hediff>
            <ageDays>0</ageDays>
          </li>
        </hediffGivers>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Wimp</li>
      <li>Frail</li>
      <li>SlowLearner</li>
      <li>DMC_DarkSlayer</li>
      <li>DMC_SpardaBloodline</li>
    </conflictingTraits>
  </TraitDef>

